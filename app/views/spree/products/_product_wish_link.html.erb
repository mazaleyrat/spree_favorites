<% if spree_current_user %>
  <% wished_products = spree_current_user.wished_products %>
  <% wished_variants = wished_products.map(&:variant_id) %>

  <% wished = "wished" if wished_variants.include?(@product.id) %>
  <%= link_to "#", id: "wish_link", class: wished do %>
    <%= inline_svg "favorite.svg" %>
  <% end %>

  <script type="text/javascript">
    wished_variants = <%= wished_variants %>;
	</script>

	<% if @product.has_variants? %>
  	<script type="text/javascript">
 			$(window).load(function(){ Initialize_Wishes(); });
		</script>
	<% end %>

<% end %>